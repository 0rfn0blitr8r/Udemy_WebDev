<% layout('layout/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Camp</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="mb-5">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title %>">
            </div>
            <div class="mb-5">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="campground[location]" value="<%=campground.location %>">
            </div>
            <div class="mb-5">
                <label class="mb-2" for="price">Price <small class="text-muted">(per person)</small></label>
                <div class="input-group ">
                    <span class="input-group-text" id="price-label" >$</span>
                    <input type="text" id="price" placeholder="0" class="form-control" name="campground[price]" aria-label="price-label" value="<%=campground.price %>">
                    <span class="input-group-text">.00</span>
                </div>
            </div>
            <div class="mb-5">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" id="location" name="campground[image]" value="<%=campground.image %>">
            </div>
            <div class="mb-5">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="location" name="campground[description]"><%=campground.description%></textarea>
            </div>
            <div class="mb-5">
                <button class="btn btn-success">Save Edit</button>
            </div>
        </form>
        <a href="/campgrounds/<%= campground._id%>">Back To Campground</a>
    </div>
</div>