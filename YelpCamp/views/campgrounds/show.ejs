<% layout('layout/boilerplate') %>
<div class="row">
	<div class="col-6 offset-3">
		<div class="card mb-3">
			<img src="<%=campground.image%>" class="card-img-top" alt="...">
			<div class="card-body">
			  <h5 class="card-title"><%= campground.title %></h5>
			  <p class="card-text"><%= campground.description %>
			<ul class="list-group list-group-flush">
			  <li class="list-group-item"><%= campground.location %></li>
			  <li class="list-group-item">$<%= campground.price %> / per night</li>
			</ul>
			<div class="card-footer">
				<a href="/campgrounds/<%=campground._id%>/edit">
					<button class="btn btn-primary">Edit</button>
				</a>
				<a href="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
					<button class="btn btn-danger" >DELETE</button>
				</a>
				<a href="/campgrounds">
					<button class="btn btn-primary">All Camps</button>
				</a>
			</div>
		  </div>
	</div>
</div>